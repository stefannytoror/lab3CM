<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Perfil">

        <EditTextPreference
            android:id="@+id/preferenceEditProfile"
            android:defaultValue="Default value"
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Editar Perfil" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Notificaciones">

        <CheckBoxPreference
            android:id="@+id/preferenceAllowNotifications"
            android:defaultValue="false"
            android:key="check_box_preference_1"
            android:title="Permitir notificaciones" />
        <CheckBoxPreference
            android:id="@+id/preferenceActivateSound"
            android:defaultValue="false"
            android:key="check_box_preference_1"
            android:title="Activar sonido " />
    </PreferenceCategory>
</PreferenceScreen>